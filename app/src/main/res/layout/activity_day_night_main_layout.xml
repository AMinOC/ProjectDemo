<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/id_btn_auto_mode"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="1"
        android:text="Auto Model"/>

    <Button
        android:id="@+id/id_btn_day_mode"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_auto_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="1"
        android:text="Day Model"/>


    <Button
        android:id="@+id/id_btn_night_mode"
        android:layout_width="300dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_day_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Night Model"/>




</android.support.constraint.ConstraintLayout>