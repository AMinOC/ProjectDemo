<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
              android:layout_height="60dp">

    <ImageView
        android:id="@+id/id_iv_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"/>

    <TextView
        android:id="@+id/id_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/id_iv_icon"
        app:layout_constraintBottom_toBottomOf="@+id/id_iv_icon"
        android:layout_marginLeft="15dp"
        android:text="我是标题"/>

    <TextView
        android:id="@+id/id_tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/id_iv_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_title"
        android:text="提示信息"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/id_iv_arrow"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@mipmap/go_icon"
        android:layout_marginRight="17dp"
        app:layout_constraintTop_toTopOf="@+id/id_tv_hint"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/id_tv_hint"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#d71345"/>
</android.support.constraint.ConstraintLayout>