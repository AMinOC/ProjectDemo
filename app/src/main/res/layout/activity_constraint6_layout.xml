<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <View
        android:id="@+id/id_line1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#d71345"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/id_tv_apply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_line1"
        tools:text="申请时间：2017-09-28 11:10:10"/>

    <TextView
        android:id="@+id/id_tv_apply_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_apply_time"
        tools:text="申请出库数：200"/>

    <TextView
        android:id="@+id/id_tv_actual_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_apply_num"
        tools:text="实际出库数：300"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/id_iv_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_apply_num"
        app:layout_constraintTop_toTopOf="@+id/id_tv_apply_num"
        android:layout_marginRight="10dp"
        tools:text="出库中"/>

    <ImageView
        android:id="@+id/id_iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        tools:src="@mipmap/go_icon"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_apply_num"
        app:layout_constraintTop_toTopOf="@+id/id_tv_apply_num"
        android:layout_marginRight="17dp"/>


    <View
        android:id="@+id/id_line2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#d71345"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_actual_num"/>


</android.support.constraint.ConstraintLayout>