<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.custom.widget.widget.CircleProgressBar
            android:id="@+id/id_circle_progress_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            />

        <cn.custom.widget.widget.LoadingPointView
            android:id="@+id/id_loading_point_view"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_marginTop="9dp"
            android:visibility="gone"/>

        <cn.custom.widget.widget.CircleRingView
            android:id="@+id/id_circle_ring_view"
            android:layout_width="179dp"
            android:layout_height="179dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            />

        <cn.custom.widget.widget.ObjectAnimateCircleRingView
            android:id="@+id/id_object_animate_circle_ring_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>

        <cn.custom.widget.widget.LoadingScaleAlphaView
            android:id="@+id/id_loading_scale_alpha_view"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            />

        <!--<cn.custom.widget.widget.JiKeLikeView-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:background="#d71345"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="60dp"-->
            <!--android:visibility="gone"/>-->

        <cn.custom.widget.widget.QuoteView
            android:layout_width="match_parent"
            android:layout_height="500dp"/>
    </LinearLayout>

</ScrollView>