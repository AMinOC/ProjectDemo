<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.custom.widget.widget.CircleProgressBar
            android:id="@+id/id_circle_progress_bar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            />

        <cn.custom.widget.widget.LoadingPointView
            android:id="@+id/id_loading_point_view"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_marginTop="9dp"
            android:visibility="gone"/>

        <cn.custom.widget.widget.CircleRingView
            android:id="@+id/id_circle_ring_view"
            android:layout_width="179dp"
            android:layout_height="179dp"
            android:layout_marginTop="15dp"
            />

        <cn.custom.widget.widget.ObjectAnimateCircleRingView
            android:id="@+id/id_object_animate_circle_ring_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"/>

        <cn.custom.widget.widget.StateView
            android:id="@+id/id_state_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            />
    </LinearLayout>

</ScrollView>