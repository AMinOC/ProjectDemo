<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <Button
        android:id="@+id/id_btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="翻转"/>


    <cn.custom.widget.widget.customlayout.BankCardView
        android:id="@+id/id_bank_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <cn.custom.widget.widget.customlayout.CenterLockHorizontalScrollview
        android:id="@+id/id_clhv"
        android:layout_width="match_parent"
        android:background="@color/c_499AF7"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </cn.custom.widget.widget.customlayout.CenterLockHorizontalScrollview>

</LinearLayout>