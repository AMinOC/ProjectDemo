<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <include
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        layout="@layout/header_title_layout"/>


    <View
        android:id="@+id/id_line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#d71345"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/header_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/id_iv_name"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_line1"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_name"
        app:layout_constraintRight_toLeftOf="@+id/id_tv_name"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"/>

    <EditText
        android:id="@+id/id_tv_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/id_iv_name"
        app:layout_constraintTop_toBottomOf="@+id/id_line1"
        android:background="@null"
        android:paddingLeft="17dp"
        android:hint="请输入用户名"
        app:layout_constraintHorizontal_bias="1.0"/>

    <View
        android:id="@+id/id_line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#d71345"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_name"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"/>


    <ImageView
        android:id="@+id/id_iv_pwd"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_line2"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_pwd"
        app:layout_constraintRight_toLeftOf="@+id/id_tv_pwd"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"/>

    <EditText
        android:id="@+id/id_tv_pwd"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/id_iv_pwd"
        app:layout_constraintTop_toBottomOf="@+id/id_line2"
        android:background="@null"
        android:paddingLeft="17dp"
        android:hint="请输入密码"
        app:layout_constraintHorizontal_bias="1.0"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_launcher"
        app:layout_constraintTop_toBottomOf="@+id/id_line2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_pwd"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"/>

    <View
        android:id="@+id/id_line3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#d71345"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <Button
        android:id="@+id/id_btn_login"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_line3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="登录"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"/>




</android.support.constraint.ConstraintLayout>