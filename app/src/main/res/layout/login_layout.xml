<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="708dp"
        android:layout_height="508dp"
        android:layout_gravity="center"
        android:background="@drawable/login_bg">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/haotian" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_logo"
            android:layout_below="@+id/iv_logo"
            android:layout_marginRight="185dp"
            android:layout_marginTop="70dp"
            app:hintAnimationEnabled="true">


            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/shouji"
                android:drawablePadding="8dp"
                android:hint="手机号或用户名"
                android:textColorHighlight="#9a9b9c"
                android:textSize="16sp" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/user_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/til_username"
            android:layout_alignRight="@+id/til_username"
            android:layout_below="@+id/til_username"
            android:layout_marginTop="7dp"
            android:background="#EAEAEA" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_divider"
            android:layout_alignRight="@+id/user_divider"
            android:layout_below="@+id/user_divider"
            android:layout_marginTop="60dp"
            app:hintAnimationEnabled="true">


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/denglumima"
                android:drawablePadding="8dp"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:textColorHighlight="#9a9b9c"
                android:textSize="16sp" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/pwd_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/til_password"
            android:layout_alignRight="@+id/til_password"
            android:layout_below="@+id/til_password"
            android:layout_marginTop="7dp"
            android:background="#EAEAEA" />

        <TextView
            android:id="@+id/txt_forgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pwd_divider"
            android:layout_marginRight="185dp"
            android:layout_marginTop="24dp"
            android:padding="5dp"
            android:text="忘记密码?"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignLeft="@+id/pwd_divider"
            android:layout_alignRight="@+id/txt_forgetPwd"
            android:layout_below="@+id/txt_forgetPwd"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_register_next"
            android:padding="5dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerInParent="true"
            android:layout_marginTop="18dp"
            android:padding="10dp"
            android:text="立即注册"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>


</ScrollView>

