<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MDTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/c_499AF7</item>
        <item name="colorPrimaryDark">@color/c_3ec88e</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="PopAnimRigthBot" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_scale_right_bot_show</item>
        <item name="android:windowExitAnimation">@anim/pop_scale_right_bot_dismiss</item>
    </style>

    <style name="PopAnimRigthTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_scale_right_top_show</item>
        <item name="android:windowExitAnimation">@anim/pop_scale_right_top_dismiss</item>
    </style>

    <style name="PopAnimLeftTop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_scale_left_top_show</item>
        <item name="android:windowExitAnimation">@anim/pop_scale_left_top_dismiss</item>
    </style>

    <style name="PopAnimLeftBot" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_scale_left_bot_show</item>
        <item name="android:windowExitAnimation">@anim/pop_scale_left_bot_dismiss</item>
    </style>


</resources>